---
import { experience } from "../../../const/const";
import { getIconComponent } from "../../../icons/IconAll.astro";
---

<section class="section_experience">
  <div class="linear-gradient-exp"></div>
  <div class="content_experience">
    <h3 class="title-experience" id="experience">Experiencia Profesional</h3>
    <div class="experience-container">
      {
        experience.map(({ date, title, position, description, technologies, modality, images }, index) => {
          return (
            <div
              class="experience-card"
            >
              <div class="card-content">
                <div class="card-text">
                  <div class="card-header">
                    <h3 class="card-title">{title}</h3>
                    <span class="card-date">{date}</span>
                  </div>
                  <p class="card-position">{position}</p>
                  <p class="card-description">{description}</p>
                  {technologies && technologies.length > 0 && (
                    <div class="card-technologies">
                      {technologies.map((tech) => {
                        const IconComponent = getIconComponent(tech);
                        return (
                          <div class="tech-icon-wrapper">
                            {IconComponent && <IconComponent />}
                          </div>
                        );
                      })}
                    </div>
                  )}
                  <span class="card-modality">{modality}</span>
                </div>
                <div class="card-image-wrapper">
                  {images && images[0] && (
                    <img
                      class="card-image"
                      src={images[0]}
                      alt={`${title}`}
                      loading="lazy"
                    />
                  )}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .section_experience {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    background-color: #111111;
    justify-content: center;
    align-items: flex-start;
    padding: 40px 0;
  }
  
  .linear-gradient-exp {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(1, 190, 150, 0.5), #000);
    z-index: 0;
  }
  
  .content_experience {
    position: relative;
    z-index: 1;
    width: 90%;
    margin: 0 auto;
    max-width: 1355px;
  }
  
  .title-experience {
    font-size: 27px;
    color: #f6f6f9;
    text-align: left;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
    padding: 20px 0 40px 0;
  }
  
  .experience-container {
    position: relative;
    padding: 20px 0;
  }
  
  .experience-card {
    position: sticky;
    top: 100px;
    margin-bottom: 48px;
    border-radius: 16px;
    border: 1px solid rgba(61, 62, 79, 0.3);
    background-color: #000;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .card-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    min-height: 580px;
    width: 100%;
    background: rgba(17, 17, 17, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 16px;
  }
  
  .card-text {
    padding: 48px 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 15px;
    flex-wrap: wrap;
    margin-bottom: 8px;
  }
  
  .card-title {
    font-size: 24px;
    font-weight: 600;
    color: #01be96;
    flex: 1;
    min-width: 250px;
    line-height: 1.3;
  }
  
  .card-date {
    font-size: 14px;
    color: #a0a0a0;
    font-weight: 500;
    white-space: nowrap;
  }
  
  .card-position {
    font-size: 18px;
    font-weight: 500;
    color: #e0e0e0;
    margin: -8px 0;
  }
  
  .card-description {
    font-size: 15px;
    line-height: 1.7;
    color: #c0c0c0;
    margin: 8px 0;
    flex: 1;
  }
  
  .card-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin: 16px 0;
    padding-top: 8px;
  }
  
  .tech-icon-wrapper {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
    background: rgba(1, 190, 150, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(1, 190, 150, 0.2);
    flex-shrink: 0;
  }
  
  .tech-icon-wrapper:hover {
    transform: scale(1.15);
    background: rgba(1, 190, 150, 0.2);
  }
  
  .tech-icon-wrapper :global(svg) {
    width: 24px;
    height: 24px;
  }
  
  .card-modality {
    font-size: 13px;
    color: #808080;
    font-style: italic;
    margin-top: 8px;
  }
  
  .card-image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0 0 16px 16px;
  }
  
  /* Desktop: 2 columns layout */
  @media (min-width: 768px) {
    .card-content {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      min-height: 384px;
    }

    .card-text {
      padding: 48px 36px;
    }

    .card-image {
      border-radius: 0 16px 16px 0;
    }

    .card-image-wrapper {
      height: 100%;
    }
  }
  
  @media (max-width: 767px) {
    .card-title {
      font-size: 20px;
      min-width: 100%;
    }
    
    .card-date {
      font-size: 13px;
    }
    
    .card-position {
      font-size: 16px;
    }
    
    .card-description {
      font-size: 14px;
    }
    
    .tech-icon-wrapper {
      width: 36px;
      height: 36px;
    }
    
    .tech-icon-wrapper :global(svg) {
      width: 20px;
      height: 20px;
    }
    
    .card-text {
      padding: 32px 20px;
    }
    
    .card-content {
      min-height: auto;
    }
    
    .card-image-wrapper {
      min-height: 300px;
    }
  }
</style>

